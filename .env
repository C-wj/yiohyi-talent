# 应用配置
APP_NAME="家宴微信小程序后台服务"
APP_VERSION="0.1.0"
APP_ENV="development"
# development, testing, production
DEBUG=true
SECRET_KEY="change_this_to_a_secure_random_string"
API_PREFIX="/api/v1"
PROJECT_ROOT="./app"
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["*"]

# 服务器配置
HOST="0.0.0.0"
PORT=8000
WORKERS=1

# 数据库配置
MONGODB_URI="mongodb://localhost:27017"
MONGODB_DB_NAME="jiayan_db"
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100

# Redis配置(可选)
REDIS_URI="redis://localhost:6379/0"
REDIS_PASSWORD=""

# JWT配置
JWT_SECRET_KEY="change_this_to_another_secure_random_string"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 微信小程序配置
WECHAT_MINI_APP_ID="your_wechat_mini_app_id"
WECHAT_MINI_APP_SECRET="your_wechat_mini_app_secret"

# 文件存储配置
UPLOAD_DIR="./static/uploads"
# 10MB
MAX_UPLOAD_SIZE=10485760
# 允许的图片类型
ALLOWED_IMAGE_TYPES=["image/jpeg","image/png","image/webp"]
UPLOADS_PROVIDER="local"

# 阿里云OSS配置(可选)
OSS_ACCESS_KEY=""
OSS_SECRET_KEY=""
OSS_BUCKET=""
OSS_ENDPOINT=""
OSS_DOMAIN=""

# 腾讯云COS配置(可选)
COS_SECRET_ID=""
COS_SECRET_KEY=""
COS_REGION=""
COS_BUCKET=""

# Celery配置
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# 日志配置
LOG_LEVEL="INFO"
LOG_DIR="./logs"
SENTRY_DSN=""

# 安全配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT="200/minute"

# 微信支付配置(用于未来扩展)
WECHAT_PAY_MCH_ID=""
WECHAT_PAY_KEY=""
WECHAT_PAY_CERT_PATH=""
WECHAT_PAY_KEY_PATH=""

# 高德地图API(用于未来扩展位置服务)
AMAP_KEY=""

# 百度AI(用于未来扩展图像识别)
BAIDU_AI_APP_ID=""
BAIDU_AI_API_KEY=""
BAIDU_AI_SECRET_KEY="" 